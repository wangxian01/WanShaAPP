<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="40dp"
    android:padding="10dp"
    >


    <com.example.l.wanshaapp.DynamicHome.CircleImageView
        android:id="@+id/pinglunimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/fenlei_1"
        />

    <TextView
        android:id="@+id/pinglunID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风雨伴你行"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/blue"
        android:layout_toRightOf="@+id/pinglunimage"
       />


    <TextView
        android:id="@+id/pinglunDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表于2小时前"
        android:textColor="@color/deepgrey"
        android:layout_toRightOf="@+id/pinglunID"
        android:textSize="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignTop="@+id/pinglunimage"
        />

    <TextView
        android:id="@+id/pinglunxinxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:layout_below="@+id/pinglunimage"/>

</RelativeLayout>