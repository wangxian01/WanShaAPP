<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/item_num"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="35dp"/>

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="游戏名"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_date6"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="爆竹的生活并不容易!"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_img1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/item_img2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/item_img3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/item_img4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="35dp"
                    android:gravity="center"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/item_img5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/item_date4"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/item_img5"
                    android:text="6.0"


                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="类型"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorSkyblue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_date"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="@color/colorSkyblue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_date2"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="@color/colorSkyblue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_date5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_date3"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="@color/colorSkyblue"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_info"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/colorSkyblue"
                android:text="详情"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>